{
  "name": "digitalart-contracts",
  "version": "0.1.0",
  "description": "A multi authorship NFT marketplace w/ royalty redistribution and IPR management",
  "keywords": [
    "nft",
    "blockchain",
    "ethereum",
    "smart-contracts",
    "media",
    "art",
    "ipr",
    "digital-collectibles",
    "marketplace"
  ],
  "files": [
    "contracts/",
    "scripts/",
    "test/",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "start": "hardhat node",
    "compile": "hardhat compile",
    "clean": "hardhat clean",
    "test": "hardhat test",
    "flatten": "hardhat flatten",
    "deploy": "hardhat run scripts/sample-script.js --network localhost",
    "lint-contracts": "solhint contracts/**/*.sol",
    "commit": "cz",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,md}": "prettier --write"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Innovation-Advisory-Links-Foundation/DigitalArt-contracts.git"
  },
  "author": {
    "name": "LINKS Foundation (BMI-OTB)",
    "email": "giacomo.corrias@linksfoundation.com",
    "url": "https://www.overtheblock.io/"
  },
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/Innovation-Advisory-Links-Foundation/DigitalArt-contracts/issues"
  },
  "homepage": "https://github.com/Innovation-Advisory-Links-Foundation/DigitalArt-contracts#readme",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "chai": "^4.2.0",
    "commitizen": "^4.2.4",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "ethereum-waffle": "^3.0.0",
    "ethers": "^5.0.0",
    "hardhat": "^2.3.0",
    "lint-staged": ">=10",
    "prettier": "2.3.0",
    "solhint": "^3.3.6",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  },
  "config": {
    "solidity": {
      "version": "0.7.6",
      "settings": {
        "outputSelection": {
          "contracts/Greeter.sol": {
            "Greeter": [
              "devdoc"
            ]
          }
        }
      }
    },
    "paths": {
      "contracts": "./contracts",
      "tests": "./test",
      "cache": "./cache",
      "build": {
        "contracts": "./artifacts/contracts"
      }
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}